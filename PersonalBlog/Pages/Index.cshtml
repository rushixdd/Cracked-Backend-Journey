@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to My Blog</h1>

@if (Model.Articles.Count == 0)
{
    <p>No articles published yet.</p>
}
else
{
    <ul>
        @foreach (var article in Model.Articles)
        {
            <li>
                <h2><a asp-page="Article" asp-route-id="@article.Id">@article.Title</a></h2>
                <p><small>Published on @article.PublishedDate.ToString("MMMM dd, yyyy")</small></p>
            </li>
        }
    </ul>
}